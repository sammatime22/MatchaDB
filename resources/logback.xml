<configuration>
    <property name="HOME_LOG" value="logs">

    <appender name="FILE-ROLLING">
        <file>${HOME_LOG}</file>

        <rollingPolicy>
            <fileNamePattern>${HOME_LOG}/matchadb.debug.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
        </rollingPolicy>
    </appender>

    <logger name="com.matchadb" level="debug">
        <appender-ref ref="FILE-ROLLING"/>
    </logger>
</configuration>